            <div class="text-red-600 text-sm mt-1" id="name-error"></div>
            <% if attendance_detail&.errors&.any? %>
              <% if attendance_detail&.errors[:user_id].any? %>
                <div class="text-red-600 text-sm mt-1">
                  <%= attendance_detail&.errors.full_messages_for(:user_id).join(', ') %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="mb-4 flex flex-col sm:flex-row">
