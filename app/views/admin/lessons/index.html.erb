<h1>Lesson</h1>
      <table >
        <thead>
          <th>Lesson Name</th>
          <th>Description</th>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.title %></td>
              <td><%= lesson.description %></td>
              <td>
                <% if lesson.clip.attached? %>
                  <video
                    id="video-<%= lesson.id %>" class="video-js" controls preload="auto" width="640" height="264"
                    data-setup="{}" >
                    <source src="<%= url_for(lesson.clip) %>" type="video/mp4" />
                  </video>
                  <% else %>
                    <p>No lesson attached to this record.</p>
                <% end %>
              </td>
              <td><%= link_to 'Edit', edit_admin_section_lesson_path(@section, lesson) %></td>
              <td><%= link_to 'DELETE', admin_section_lesson_path(@section, lesson), data: {turbo_method: :delete} %></td>
              <td><%= link_to 'Show', admin_section_lesson_path(@section, lesson) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
<%= link_to 'Add Lesson', new_admin_section_lesson_path %>