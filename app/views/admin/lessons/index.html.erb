<%= content_for :head do %>
  <%= javascript_import_module_tag "controllers/lesson" %>
<% end %>
<div class="flex flex-col w-full">
  <div class="flex w-[71%] sm:w-[80%] md:w-[88%] lg:w-[95%] mt-10 sm:mx-auto md:mr-auto lg:ml-[30px] sm:ml-[30px] md:ml-[56px] justify-between flex-row sm:flex-row md:flex-row sm:mr-[43px] ml-auto mr-[23px]">
    <div class="text-[#0BC08B] text-[16px] sm:text[16px] md:text-[18px] lg:text-[20px] font-medium">Session Details</div>
    <div>
      <!-- Modal toggle -->
      <button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="block text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] px-1 py-1 md:px-4 md:py-2 rounded text-[16px] font-semibold hover:bg-[#0082CE]" type="button">
        + Add Session
      </button>
      <!-- Main modal -->
      <div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
        <div class="relative w-full lg:max-w-[65rem] md:max-w-[40rem] sm:max-w-[32rem] max-h-full ml-[42px] sm:ml-[25px] md:ml-[0px]">
          <!-- Modal content -->
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="authentication-modal">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
            <div class="px-6 py-6 lg:px-8">
              <h3 class="mb-10 text-xl font-semibold text-[#31B978] dark:text-white text-center">New SESSION</h3>
              <%= form_for Lesson.new, url: admin_lessons_path(), method: :post, html: { class: "space-y-6 w-[90%] mx-auto" } do |f| %>
                <div class="flex flex-col md:flex-row w-full gap-x-10 gap-y-4">
                  <div class="flex flex-col md:flex-row items-start mb-4 md:w-[50%] w-full">
                    <label for="Section" class="md:w-[30%] w-[30%] block mb-2 text-lg font-medium text-[#000]">Section</label>
                    <%= collection_select(:lesson, :section_id, Section.all, :id, :title, { include_blank: "Select Section", selected: '' }, { class: "mb-4 bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 outline-none block w-full md:w-[70%] p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle" }) %>
                  </div>
                  <div class="flex flex-col md:flex-row items-start md:w-[50%] w-full">
                    <label for="title" class="w-[60%] md:w-[30%] block mb-2 text-lg text-[#000] font-medium">Title</label>
                    <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-[70%] p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4" %>
                  </div>
                </div>
                <div class="flex flex-col md:flex-row w-full gap-x-10 gap-y-4">
                  <div class="flex flex-col md:w-1/2 w-full gap-5">
                    <div class="flex flex-col md:flex-row items-normal md:items-center mb-4">
                      <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                      <div class="bg-[#F5F5F5] h-[50px] flex items-center md:w-[70%] w-full rounded-lg">
                        <div class="clipUpload">
                          <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <%= f.file_field :clip %>
                          <p class="clip text-[#818181] text-[15px] font-medium">Upload your files here</p>
                        </div>
                      </div>
                    </div>
                    <div class="flex flex-col md:flex-row items-normal md:items-center mb-4">
                      <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                      <div class="bg-[#F5F5F5] h-[50px] flex items-center w-full md:w-[70%] rounded-lg">
                        <div class="fileUploadWrap">
                          <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <%= f.file_field :attachments, multiple: true %>
                          <p class="attachments text-[#818181] text-[15px] font-medium">Upload your files here</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="flex flex-col md:flex-row items-start mb-4 md:w-1/2 w-full">
                    <label for="description" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Description<br>
                      <span class="text-[15px] font-medium text-[#C6C6C6]">(optional)</span></label>
                    <%= f.text_field :description, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full md:w-[70%] h-[16vh] p-2.5 rounded-[7px]' %>
                  </div>
                </div>
                <div class="md:w-1/5 w-1/2 mx-auto mt-11">
                  <%= f.submit "Create", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-between pt-10 md:pt:20 pb-4 md:w-[88%] lg:w-[95%] w-[95%] mr-auto lg:ml-[30px] md:ml-[55px] ml-[30px] flex-col sm:flex-row md:flex-row">
    <div class="flex flex-col md:flex-row gap-6">
      <div class="text-[#31B978] text-[18px] font-bold  pb-4 sm:pb-0">
        <%= collection_select(:course, :course_name, Course.all, :id, :course_name, { prompt: "Select Course", selected: '' }, { class: "bg-gray-50 border-0 foucus:ring-0 text-[#818181] text-[16px] font-medium rounded-lg outline-none block w-full p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle custom-select sources" }) %>
      </div>
      <div class="text-[#31B978] text-[18px] font-bold sm:ml-[10px] ml-[25px] pb-4 sm:pb-0">
        <%= collection_select(:section, :title, Section.all, :id, :title, { prompt: "Select Section", selected: '' }, { class: "bg-gray-50 border-0 foucus:ring-0 text-[#818181] text-[16px] font-medium rounded-lg outline-none block w-full p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle custom-select sources" }) %>
      </div>
    </div>
    <label for="table-search " class="sr-only">Search</label>
    <div class="relative ml-[45px] sm:ml-[50px] md:ml-[55px] lg:ml-[60px]">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <img src="<%= asset_path("search.png") %>">
      </div>
      <input type="text" id="table-search" class="block p-2 pl-10 text-base text-gray-900 border-[0] focus:ring-0 rounded-lg md:w-72 h-11 bg-gray-50 dark:placeholder-gray-400 dark:text-white lg:w-full sm:w-[93%] w-[90%]" placeholder="Search or type">
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-sm lg:overflow-x-hidden mt-4 w-[87%] sm:w-[90%] md:w-[95%] lg:w-[95%] mr-auto ml-[30px] h-[50vh]">
    <table class="w-full text-sm text-left text-gray-500 ml-[47px] sm:ml-[63px] lg:ml-0 md:ml-[26px] dark:text-gray-400 overflow-auto table-auto">
      <thead class="text-[#000] text-[14px] bg-[#EDEDED] dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            Courses Name
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            Section Name
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            Title
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            description
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            clip
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            Attachments
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text:[16px] lg:text-[18px]">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="overflow-auto">
        <% @lessons.each do |lesson| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
            <th scope="row" class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181] whitespace-nowrap dark:text-white">
              <%= lesson.section.course.course_name %>
            </th>
            <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
              <%= lesson.section.title %>
            </td>
            <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
              <%= lesson.title %>
            </td>
            <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
              <%= lesson.description %>
            </td>
            <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
              <% if lesson.clip.attached? %>
                <video id="video-<%= lesson.id %>" class="video-js" controls preload="auto" width="40" height="35" data-setup="{}" >
                  <source src="<%= url_for(lesson.clip) %>" type="video/mp4" />
                </video>
              <% else %>
                <p>No lesson attached to this record.</p>
              <% end %>
            </td>
            <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
              <% if lesson.attachments.attached? %>
                <% lesson.attachments.each do |attachment| %>
                  <%= link_to " #{attachment.filename}", rails_blob_path(attachment, disposition: "attachment") %><br>
                <% end %>
              <% else %>
                <p>No attachments for this lesson.</p>
              <% end %>
            </td>
            <td class="px-6 py-4 flex gap-4">
              <button data-modal-target="large-modal-<%= lesson.id %>" data-modal-toggle="large-modal-<%= lesson.id %>" class="block w-full md:w-auto" type="button">
                <img src="<%= asset_path("pencil.png") %>" alt="...">
              </button>
              <div id="large-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
                <div class="relative w-full lg:max-w-[65rem] md:max-w-[40rem] sm:max-w-[32rem] max-h-full ml-[42px] sm:ml-[25px] md:ml-[0px]">
                  <!-- Modal content -->
                  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 rounded-t dark:border-gray-600">
                      <h3 class="text-[26px] font-semibold text-[#31B978] text-center flex justify-center w-full pl-[50px]">
                        Edit SESSION
                      </h3>
                      <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="large-modal-<%= lesson.id %>">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                          <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                        <span class="sr-only">Close modal</span>
                      </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-7 space-y-6 lg:w-[86%] sm:w-[95%] w-[90%] mr-auto lg:ml-10 ml-5">
                      <%= form_for(lesson, url: admin_lesson_path(lesson), method: :patch, html: { class: "space-y-6" }) do |f| %>
                        <div class="flex flex-col md:flex-col lg:flex-row w-full gap-5">
                          <div class="flex flex-col md:flex-row items-start mb-4 md:w-[50%] w-full">
                            <label for="Section" class="md:w-[30%] w-[30%] block mb-2 text-lg font-medium text-[#000]">Section</label>
                            <%= f.text_field :section, value: lesson.section.title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-[70%] p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4 disabled", disabled: true %>
                          </div>
                          <div class="flex flex-col md:flex-row items-start md:w-[50%] w-full">
                            <label for="title" class="w-[60%] md:w-[30%] block mb-2 text-lg text-[#000] font-medium">Title</label>
                            <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-[70%] p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4" %>
                          </div>
                        </div>
                        <div class="flex flex-col md:flex-row w-full gap-5">
                          <div class="flex flex-col md:w-1/2 w-full gap-5">
                            <div class="flex flex-col md:flex-row items-center mb-4">
                              <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                              <div class="bg-[#F5F5F5] h-[50px] flex items-center md:w-[70%] w-full rounded-lg">
                                <div class="clipUpload">
                                  <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                  </svg>
                                  <%= f.file_field :clip %>
                                  <% if lesson.clip.attached? %>
                                    <p class="clip text-[#818181] text-[15px] font-medium">
                                      <%= link_to lesson.clip.filename, rails_blob_path(lesson.clip, disposition: 'attachment') %>
                                    </p>
                                  <% else %>
                                    <p class="clip text-[#818181] text-[15px] font-medium">Upload your files here</p>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                            <div class="flex flex-col md:flex-row items-center mb-4">
                              <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                              <div class="bg-[#F5F5F5] h-[50px] flex items-center w-full md:w-[70%] rounded-lg">
                                <div class="fileUploadWrap">
                                  <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                  </svg>
                                  <%= f.file_field :attachments, multiple: true %>
                                  <% if lesson.attachments.attached? %>
                                    <p class="attachments text-[#818181] text-[15px] font-medium">
                                      <% lesson.attachments.each do |attachment| %>
                                        <%= link_to attachment.filename, rails_blob_path(attachment, disposition: 'attachment') %>
                                        <%= ', ' unless attachment == lesson.attachments.last %>
                                      <% end %>
                                    </p>
                                  <% else %>
                                    <p class="attachments text-[#818181] text-[15px] font-medium">Upload your files here</p>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="flex flex-col md:flex-row items-start mb-4 md:w-1/2 w-full">
                            <label for="description" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Description<br>
                              <span class="text-[15px] font-medium text-[#C6C6C6]">(optional)</span></label>
                            <%= f.text_field :description, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full md:w-[70%] h-[16vh] p-2.5 rounded-[7px]' %>
                          </div>
                        </div>
                        <div class="md:w-1/5 w-1/2 mx-auto mt-11">
                          <%= f.submit "Update", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <button data-modal-target="popup-modal-<%= lesson.id %>" data-modal-toggle="popup-modal-<%= lesson.id %>" class="block" type="button">
                <img src="<%= asset_path("delete.png") %>" alt="...", class="del-img">
              </button>
              <div id="popup-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg"  style="backdrop-filter: contrast(0.5);">
                <div class="relative w-full max-w-md max-h-full shadow-md">
                  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <h4 class="text-[20px] font-medium pt-6 pl-6 text-[#31B978]">Confirm Deletion</h4>
                    <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal-<%= lesson.id %>">
                      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                      </svg>
                      <span class="sr-only">Close modal</span>
                    </button>
                    <div class="px-6 pb-6 pt-2">
                      <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400 mt-4 ">Are you sure you want to delete this product?</h3>
                      <%= link_to 'DELETE', admin_lesson_path(lesson), data: {turbo_method: :delete}, class: "mr-2 text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] inline-flex items-center px-5 py-2.5 text-center mr-2" %>
                      <button data-modal-hide="popup-modal" type="button" class="text-white rounded-lg border bg-gradient-to-r from-[#1AB69D] to-[#31B978] text-[16px] font-semibold px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-4">
      <%= will_paginate(@lessons) %>
    </div>
  </div>
</div>
