<%= content_for :head do %>
  <%= javascript_import_module_tag "controllers/validation" %>
<% end %>
<div class="flex flex-col lg:w-[94%] lg:ml-auto md:w-[92%] md:ml-auto">
  <div class="flex w-[50%] sm:w-[90%] mt-10 mx-auto justify-between flex-col sm:flex-row">
    <div class="text-[#818181] text-[18px]">Session Details</div>
    <div>
      <!-- Modal toggle -->
      <button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="block text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] px-1 py-1 md:px-4 md:py-2 rounded font-bold hover:bg-[#0082CE]" type="button">
        + Add Session
      </button>
      <!-- Main modal -->
      <div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <%= content_for :head do %>
          <%= javascript_import_module_tag "controllers/validation" %>
        <% end %>
        <div class="relative w-full max-w-[60rem] max-h-full shadow-2xl">
          <!-- Modal content -->
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="authentication-modal">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
            <div class="px-6 py-6 lg:px-8">
              <h3 class="mb-4 text-xl font-semibold text-[#31B978] dark:text-white text-center">New Section Management</h3>
              <%= form_for Lesson.new, url: admin_lessons_path(), class: "space-y-6", method: :post do |f| %>
                <div class="flex flex-row w-full gap-5">
                  <div class="flex items-center mb-4 w-[50%]">
                    <label for="Section Name" class="w-[30%] block mb-2 text-sm font-medium text-gray-900 dark:text-white">Section Name</label>
                    <%= collection_select(:lesson, :section_id, Section.all, :id, :title, { include_blank: "Select Section", selected: '' }, { class: "mb-4 bg-gray-50 border border-gray-300 text-sm rounded-lg outline-none block w-[70%] p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle" }) %>
                  </div>
                  <div class="flex items-center w-[50%]">
                    <label for="title" class="w-[30%] block mb-2 text-sm font-medium text-gray-900 dark:text-white">Title</label>
                    <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-[70%] p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4" %>
                  </div>
                </div>
                <div class="flex flex-row w-full gap-5">
                  <div class="flex flex-col w-1/2 gap-5">
                    <div class="flex items-center mb-4">
                      <label for="Clip" class="w-[30%] block mb-2 text-sm font-medium text-gray-900 dark:text-white">Clip</label>
                      <div class="bg-[#F5F5F5] h-[50px] flex items-center w-[70%] rounded-lg">
                        <div class="clipUpload">
                          <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <%= f.file_field :clip, name: "clip" %>
                          <p class="clip text-[#818181]">Upload your files here</p>
                        </div>
                      </div>
                    </div>
                    <div class="flex items-center mb-4">
                      <label for="Clip" class="w-[30%] block mb-2 text-sm font-medium text-gray-900 dark:text-white">Clip</label>
                      <div class="bg-[#F5F5F5] h-[50px] flex items-center w-[70%] rounded-lg">
                        <div class="fileUploadWrap">
                          <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <%= f.file_field :attachments, multiple: true, name: "attachments" %>
                          <p class="attachments text-[#818181]">Upload your files here</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="flex items-baseline mb-4 w-1/2">
                    <label for="description" class="w-[30%] block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
                    <%= f.text_area :description, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-[70%] h-[16vh] p-2.5 rounded-[7px]' %>
                  </div>
                </div>
                <div class="w-1/5 mx-auto mt-11">
                  <%= f.submit "Create", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-between pt-20 pb-4 w-[90%] mx-auto flex-col md:flex-row">
    
    <div class="text-[#31B978] text-[18px] font-bold sm:ml-[10px] ml-[25px] w-[70%] md:w-[20%] pb-4 sm:pb-0">
      <%= collection_select(:course, :course_name, Course.all, :id, :course_name, { include_blank: "Select Course", selected: '' }, { class: "bg-gray-50 border border-gray-300 text-sm rounded-lg outline-none block w-full p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle custom-select sources" }) %>
    </div>
    <div class="text-[#31B978] text-[18px] font-bold sm:ml-[10px] ml-[25px] w-[70%] md:w-[20%] pb-4 sm:pb-0">
      <%= collection_select(:section, :title, Section.all, :id, :title, { include_blank: "Select section", selected: '' }, { class: "bg-gray-50 border border-gray-300 text-sm rounded-lg outline-none block w-full p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle" }) %>
    </div>
    <label for="table-search " class="sr-only">Search</label>
    <div class="relative ml-[60px]">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
      </div>
      <input type="text" id="table-search" class="block p-2 pl-10 text-sm text-gray-900 border-[0] rounded-lg md:w-80 bg-gray-50 dark:placeholder-gray-400 dark:text-white w-[100%]" placeholder="Search for items">
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-sm sm:rounded-sm mt-4 w-[90%] mx-auto h-[50vh]">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 overflow-auto table-auto ml-[57px] sm:ml-0">
      <thead class="text-xs text-[#000] text-[14px] uppercase bg-[#EDEDED] dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-5">
            Courses Name
          </th>
          <th scope="col" class="px-6 py-5">
            Section Name
          </th>
          <th scope="col" class="px-6 py-5">
            Title
          </th>
          <th scope="col" class="px-6 py-5">
            description
          </th>
          <th scope="col" class="px-6 py-5">
            clip
          </th>
          <th scope="col" class="px-6 py-5">
            Attachments
          </th>
          <th scope="col" class="px-6 py-5">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="overflow-auto">
        <% @lessons.includes(:section, clip_attachment: :blob, attachments_attachments: :blob).each do |lesson| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= lesson.section.course.course_name %>
            </th>
            <td class="px-6 py-4">
              <%= lesson.section.title %>
            </td>
            <td class="px-6 py-4">
              <%= lesson.title %>
            </td>
            <td class="px-6 py-4">
              <%= lesson.description %>
            </td>
            <td class="px-6 py-4">
              <% if lesson.clip.attached? %>
                <video id="video-<%= lesson.id %>" class="video-js" controls preload="auto" width="40" height="35" data-setup="{}" >
                  <source src="<%= url_for(lesson.clip) %>" type="video/mp4" />
                </video>
              <% else %>
                <p>No lesson attached to this record.</p>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <% if lesson.attachments.attached? %>
                <% lesson.attachments.each do |attachment| %>
                  <%= link_to "Download #{attachment.filename}", rails_blob_path(attachment, disposition: "attachment") %><br>
                <% end %>
              <% else %>
                <p>No attachments for this lesson.</p>
              <% end %>
            </td>
            <td class="px-6 py-4 flex gap-4">
              <button data-modal-target="large-modal-<%= lesson.id %>" data-modal-toggle="large-modal-<%= lesson.id %>" class="block w-full md:w-auto   " type="button">
                <img src="<%= asset_path("pencil.png") %>" alt="...">
              </button>
              <div id="large-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
                <div class="relative w-full max-w-4xl max-h-full">
                  <!-- Modal content -->
                  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                      <h3 class="text-xl font-medium text-[#31B978] text-center">
                        Edit Lesson Management
                      </h3>
                      <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="large-modal-<%= lesson.id %>">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                          <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                        <span class="sr-only">Close modal</span>
                      </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-7 space-y-6">
                      <%= form_for(lesson, url: admin_lesson_path(lesson), method: :patch) do |f| %>
                        <div>
                          <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Title</label>
                          <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4" %>
                        </div>
                        <div class="mb-4">
                          <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
                          <%= f.text_area :description, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 rounded-[7px]' %>
                        </div>
                        <div class="mb-4 flex justify-between">
                          <label for="clip" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Clip</label>
                          <%= f.file_field :clip, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-1/2 p-2.5 rounded-[7px]' %>
                        </div>
                        <div class="mb-4 flex justify-between">
                          <label for="attachments" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Attachments</label>
                          <%= f.file_field :attachments, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-1/2 p-2.5 rounded-[7px]' %>
                        </div>
                        <div class="w-1/5 mx-auto">
                          <%= f.submit "Update", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <button data-modal-target="popup-modal-<%= lesson.id %>" data-modal-toggle="popup-modal-<%= lesson.id %>" class="block" type="button">
                <img src="<%= asset_path("delete.png") %>" alt="...", class="w-6 h-6">
              </button>
              <div id="popup-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg">
                <div class="relative w-full max-w-md max-h-full shadow-md">
                  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <h4 class="text-[16px] pt-6 pl-6 text-[#31B978]">Confirm Deletion</h4>
                    <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal-<%= lesson.id %>">
                      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                      </svg>
                      <span class="sr-only">Close modal</span>
                    </button>
                    <div class="px-6 pb-6 pt-2">
                      <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400 mt-4 ">Are you sure you want to delete this product?</h3>
                      <%= link_to 'DELETE', admin_lesson_path(lesson), data: {turbo_method: :delete}, class: "mr-2 text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2" %>
                      <button data-modal-hide="popup-modal" type="button" class="text-white rounded-lg border bg-gradient-to-r from-[#1AB69D] to-[#31B978] text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
  $(".custom-select").each(function() {
  var classes = $(this).attr("class"),
      id      = $(this).attr("id"),
      name    = $(this).attr("name");
  var template =  '<div class="' + classes + '">';
      template += '<span class="custom-select-trigger">' + $(this).attr("placeholder") + '</span>';
      template += '<div class="custom-options">';
      $(this).find("option").each(function() {
        template += '<span class="custom-option ' + $(this).attr("class") + '" data-value="' + $(this).attr("value") + '">' + $(this).html() + '</span>';
      });
  template += '</div></div>';

  $(this).wrap('<div class="custom-select-wrapper"></div>');
  $(this).hide();
  $(this).after(template);
  });
  $(".custom-option:first-of-type").hover(function() {
  $(this).parents(".custom-options").addClass("option-hover");
  }, function() {
  $(this).parents(".custom-options").removeClass("option-hover");
  });
  $(".custom-select-trigger").on("click", function() {
  $('html').one('click',function() {
    $(".custom-select").removeClass("opened");
  });
  $(this).parents(".custom-select").toggleClass("opened");
  event.stopPropagation();
  });
  $(".custom-option").on("click", function() {
  $(this).parents(".custom-select-wrapper").find("select").val($(this).data("value"));
  $(this).parents(".custom-options").find(".custom-option").removeClass("selection");
  $(this).addClass("selection");
  $(this).parents(".custom-select").removeClass("opened");
  $(this).parents(".custom-select").find(".custom-select-trigger").text($(this).text());
  });

  // File Upload

   $(document).on('change', ".clipUpload input[type='file']",function(){
        if ($(this).val()) {

            var filename = $(this).val().split("\\");

            filename = filename[filename.length-1];

            $('.clip').text(filename);
        }
   });
      $(document).on('change', ".fileUploadWrap input[type='file']",function(){
        if ($(this).val()) {

            var filename = $(this).val().split("\\");

            filename = filename[filename.length-1];

            $('.attachments').text(filename);
        }
   });
</script>
