<div class="container">
  <h1>New Lesson</h1>
  <%= form_for [:admin, @section, @lesson], url: admin_section_lessons_path(@section, @lesson), method: :post, multipart: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
      <% if @lesson.errors.has_key?(:title) %>
        <span style="color: red">
          <%= @lesson.errors[:title].first %>
        </span>
      <% end %>
    </div>
    <div>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
      <% if @lesson.errors.has_key?(:description) %>
        <span style="color: red">
          <%= @lesson.errors[:description].first %>
        </span>
      <% end %>
    </div>
    <div>
      <%= f.label :clip %>
      <br>
      <%= f.file_field :clip %>
      <% if @lesson.errors.has_key?(:clip) %>
        <span style="color: red">
          <%= @lesson.errors[:clip].first %>
        </span>
      <% end %>
    </div>
    <div>
      <%= f.label :attachments, 'Attachments' %>
      <br>
      <%= f.file_field :attachments, multiple: true %>
    </div>
    <br>
    <%= f.submit "Create Lesson", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to 'Back to Lesson List', admin_section_lessons_path, class: "btn btn-secondary" %>
</div>
