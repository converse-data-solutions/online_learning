<tbody class="overflow-auto filter-table-data" id="lessonTable">
  <% lessons.includes(:section, clip_attachment: :blob, attachments_attachments: :blob).each do |lesson| %>
    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"  >
      <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
        <%= lesson.title %>
      </td>
      <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
        <%= lesson.description %>
      </td>
      <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
        <% if lesson.clip.attached? %>
          <video id="video-<%= lesson.id %>" class="video-js" controls preload="auto" width="40" height="35" data-setup="{}">
            <source src="<%= url_for(lesson.clip) %>" type="video/mp4" /> </video>
        <% else %>
          <p>No lesson attached to this record.</p>
        <% end %>
      </td>
      <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
        <% if lesson.attachments.attached? %>
          <% lesson.attachments.each do |attachment| %>
            <%= link_to "Download #{attachment.filename}", rails_blob_path(attachment, disposition: "attachment") %>
            <br>
          <% end %>
        <% else %>
          <p>No attachments for this lesson.</p>
        <% end %>
      </td>
      <td class="px-6 py-4 flex gap-4">
        <button data-modal-target="large-modal-<%= lesson.id %>" data-modal-toggle="large-modal-<%= lesson.id %>" class="block w-full md:w-auto   " type="button"> <img src="<%= asset_path("pencil.png") %>" alt="..."> </button>
        <div id="large-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
          <div class="relative w-full max-w-[54rem] max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
              <!-- Modal header -->
              <div class="flex items-center justify-between p-4 md:p-5 rounded-t dark:border-gray-600">
                <h3 class="text-xl font-medium text-[#31B978] text-center flex justify-center w-full"> EDIT SESSION </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="large-modal-<%= lesson.id %>">
                  <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" /> </svg> <span class="sr-only">Close modal</span> </button>
              </div>
              <!-- Modal body -->
              <div class="p-7 space-y-6">
                <%= form_for(lesson, url: admin_section_lesson_path(lesson.section.id, lesson), method: :patch) do |f| %>
                  <div class="flex flex-col md:flex-row w-full gap-5">
                    <div class="flex flex-col md:flex-row items-start mb-4 md:w-[50%] w-full">
                      <label for="Section Name" class="md:w-[60%] w-[30%] block mb-2 text-lg font-medium text-[#000]">Section Name</label>
                      <%= collection_select(:lesson, :section_id, Section.all, :id, :title, { include_blank: "Select Section", selected: '' }, { class: "mb-4 bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 outline-none block w-full md:w-[70%] p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle" }) %>
                    </div>
                    <div class="flex flex-col md:flex-row items-start md:w-[50%] w-full">
                      <label for="title" class="w-[60%] md:w-[30%] block mb-2 text-lg text-[#000] font-medium">Title</label>
                      <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-[70%] p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white mb-4" %>
                    </div>
                  </div>
                  <div class="flex flex-col md:flex-row w-full gap-5">
                    <div class="flex flex-col md:w-1/2 w-full gap-5">
                      <div class="flex flex-col md:flex-row items-center mb-4">
                        <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                        <div class="bg-[#F5F5F5] h-[50px] flex items-center md:w-[70%] w-full rounded-lg">
                          <div class="clipUpload">
                            <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /> </svg>
                            <%= f.file_field :clip, name: "clip" %>
                            <p class="clip text-[#818181]">Upload your files here</p>
                          </div>
                        </div>
                      </div>
                      <div class="flex flex-col md:flex-row items-center mb-4">
                        <label for="Clip" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Clip</label>
                        <div class="bg-[#F5F5F5] h-[50px] flex items-center w-full md:w-[70%] rounded-lg">
                          <div class="fileUploadWrap">
                            <svg class="fileUploadIcon" width="24" height="22" viewBox="0 0 24 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M5.98477 14.8044C-1.04648 15.5856 -0.26523 6.99187 5.98477 7.77312C3.64102 -0.82063 16.9223 -0.820629 16.141 5.42937C23.9535 3.08562 23.9535 15.5856 16.9223 14.8044M7.54727 11.6794L11.4535 8.55437M11.4535 8.55437L15.3598 11.6794M11.4535 8.55437V20.2731" stroke="#818181" stroke-opacity="0.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /> </svg>
                            <%= f.file_field :attachments, multiple: true, name: "attachments" %>
                            <p class="attachments text-[#818181]">Upload your files here</p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="flex flex-col md:flex-row items-baseline mb-4 md:w-1/2 w-full">
                      <label for="description" class="w-[60%] md:w-[30%] block mb-2 text-lg font-medium text-[#000]">Description
                        <br>
                        <span class="text-[15px] font-medium text-[#C6C6C6]">(optional)</span></label>
                      <%= f.text_field :description, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-blue-500 focus:border-blue-500 block w-full md:w-[70%] h-[16vh] p-2.5 rounded-[7px]' %>
                    </div>
                  </div>
                  <div class="w-1/2 md:w-1/5 mx-auto mt-11">
                    <%= f.submit "UPDATE", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <button data-modal-target="popup-modal-<%= lesson.id %>" data-modal-toggle="popup-modal-<%= lesson.id %>" class="block" type="button"> <img src="<%= asset_path("delete.png") %>" alt="..." , class="del-img"> </button>
        <div id="popup-modal-<%= lesson.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg" style="backdrop-filter: contrast(0.5);">
          <div class="relative w-full max-w-[42rem] max-h-full shadow-md">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
              <h4 class="text-[20px] font-medium pt-6 pl-6 text-[#31B978]">Confirm Deletion</h4>
              <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal-<%= lesson.id %>">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" /> </svg> <span class="sr-only">Close modal</span> </button>
              <div class="px-6 pb-6 pt-2">
                <h3 class="mb-5 text-[#818181] font-medium text-[16px] mt-4 ">Are you sure you want to delete this product?</h3>
                <%= link_to 'DELETE', admin_section_lesson_path(lesson.section.id, lesson), data: {turbo_method: :delete}, class: "text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] inline-flex items-center px-9 py-2.5 text-center md:mr-2 mr-0" %>
                <button data-modal-hide="popup-modal" type="button" class="text-white rounded-lg border bg-gradient-to-r from-[#1AB69D] to-[#31B978] text-[16px] font-semibold px-9 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">CANCEL</button>
              </div>
            </div>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
  <%= render partial: 'admin/lessons/form', locals: { section_id: @section_id} %>
</tbody>
