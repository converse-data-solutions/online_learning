<h1>New Video</h1>


  <%= form_for [:admin, @section, @video], url: admin_section_videos_path(@section, @video) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :clip %>
      <br>
      <%= f.file_field :clip %>
    </div>

      <%= f.submit "Create video" %>
  <% end %>

  <%= link_to 'Back to Video List', admin_section_videos_path %>

