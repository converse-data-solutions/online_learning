<%= form_for User.new, url: admin_users_path, html: { class: "validate", id: "user-admin-form", validate: true }, method: :post do |f| %>
  <div class="mb-4 flex flex-col sm:flex-row">
    <label for="email" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Email<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
    <div class="w-full sm:w-[50%] flex flex-col">
      <%= f.email_field :email, class: "validate w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5 focus:ring-0 focus:ring-offset-0 focus:border-gray-200" %>
      <% if user&.errors&.any? %>
        <% if user.errors[:email].any? %>
          <div class="text-red-600 text-sm mt-1">
            <%= f.object.errors[:email].join(', ') %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mb-4 flex flex-col sm:flex-row">
    <label for="Role" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Role</label>
    <%= f.select :role, options_for_select(['admin', 'student']), {}, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 outline-none block w-full sm:w-[50%] p-2.5 rounded-[7px]' %>
  </div>
  <div class="mb-4 flex flex-col sm:flex-row">
    <label for="Current Type" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Current Type</label>
    <%= f.select :current_type, User.current_types.keys.map { |type| [type.humanize, type] }, {}, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-0 focus:ring-offset-0 focus:border-gray-200 w-full sm:w-[50%] block p-2.5 rounded-[7px]" %>
  </div>
  <div class="mb-4 flex flex-col sm:flex-row">
    <label for="password" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
    <div class="w-full sm:w-[50%] flex flex-col">
      <%= f.password_field :password, class: "validate bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
      <% if f.object.errors[:email].any? %>
        <div class="text-red-600 text-sm mt-1">
          <%= f.object.errors[:email].join(', ') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-4 flex flex-col sm:flex-row">
    <label for="Confirm Password" class="block mb-2 text-lg font-medium text-[#000] dark:text-white w-full sm:w-[50%]">Confirmation Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
    <div class="w-full sm:w-[50%] flex flex-col">
      <%= f.password_field :password_confirmation, class: "validate bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
      <% if f.object.errors[:email].any? %>
        <div class="text-red-600 text-sm mt-1">
          <%= f.object.errors[:email].join(', ') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="w-1/5 mx-auto mt-4 sm:mt-6">
    <%= f.submit "Create", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
  </div>
  <% if user&.errors&.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
