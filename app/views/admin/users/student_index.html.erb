<%= content_for :head do %>
  <%= javascript_import_module_tag "controllers/validation" %>
<% end %>
<div class="flex flex-col w-full">
  <div class="flex w-[71%] sm:w-[80%] md:w-[88%] lg:w-[95%] mt-10 sm:mx-auto md:mr-auto lg:ml-[30px] sm:ml-[30px] md:ml-[56px] justify-between flex-row sm:flex-row md:flex-row sm:mr-[43px] ml-auto mr-[23px]">
    <div class="text-[#818181] text-[16px] sm:text[16px] md:text-[18px] lg:text-[20px]  font-medium">Student Management - Admin</div>
    <div>
      <!-- Modal toggle -->
      <button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="block text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] px-1 py-1 md:px-4 md:py-2 rounded font-bold hover:bg-[#0082CE]" type="button">
        + Add User
      </button>
      <!-- Main modal -->
      <div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
        <div class="relative w-full lg:max-w-[60rem] sm:max-w-[32rem] max-h-full max-w-[20rem] ml-[42px] sm:ml-[25px] md:ml-[0px]">
          <!-- Modal content -->
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="authentication-modal">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
            <div class="px-6 py-6 lg:px-8">
              <h3 class="mb-4 sm:mb-7 md:mb-10 text-[26px] font-semibold text-[#0BC08B] dark:text-white text-center">New Student</h3>
              <div class="lg:w-[86%] sm:w-[95%] w-[90%] mr-auto lg:ml-10 ml-5">
                <%= form_for User.new, url: admin_users_path, class: "space-y-6", method: :post do |f| %>
                  <div class="mb-4 flex flex-col sm:flex-row">
                    <label for="email" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Email<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                    <div class="w-full sm:w-[50%] flex flex-col">
                      <%= f.email_field :email, class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5 focus:ring-0 focus:ring-offset-0 focus:border-gray-200" %>
                      <div class="error" id="email-error", style="color: red;"></div>
                    </div>
                  </div>
                  <div class="mb-4 flex flex-col sm:flex-row">
                    <label for="Role" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Role</label>
                    <%= f.select :role, options_for_select(['admin', 'student']), {}, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 outline-none block w-full sm:w-[50%] p-2.5 rounded-[7px]' %>
                  </div>
                  <div class="mb-4 flex flex-col sm:flex-row">
                    <label for="Current Type" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Current Type</label>
                    <%= f.select :current_type, User.current_types.keys.map { |type| [type.humanize, type] }, {}, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-0 focus:ring-offset-0 focus:border-gray-200 w-full sm:w-[50%] block p-2.5 rounded-[7px]" %>
                  </div>
                  <div class="mb-4 flex flex-col sm:flex-row">
                    <label for="password" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                    <div class="w-full sm:w-[50%] flex flex-col">
                      <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
                      <div class="error" id="password-error", style="color: red;"></div>
                    </div>
                  </div>
                  <div class="mb-4 flex flex-col sm:flex-row">
                    <label for="Confirm Password" class="block mb-2 text-lg font-medium text-[#000] dark:text-white w-full sm:w-[50%]">Confirmation Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                    <div class="w-full sm:w-[50%] flex flex-col">
                      <%= f.password_field :password_confirmation, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
                      <div class="error" id="password-confirmation-error", style="color: red;"></div>
                    </div>
                  </div>
                  <div class="w-1/5 mx-auto mt-4 sm:mt-6">
                    <%= f.submit "Create", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-between pt-10 md:pt:20 pb-4 md:w-[88%] lg:w-[95%] w-[95%] mr-auto lg:ml-[30px] md:ml-[55px] ml-[30px] flex-col sm:flex-row md:flex-row  ">
    <div class="text-[#0BC08B] text-[20px] font-medium sm:ml-[10px] ml-[25px] mb-4 sm:mb-0">Student Details</div>
    <label for="table-search " class="sr-only">Search</label>
    <div class="relative ml-[45px] sm:ml-[50px] md:ml-[55px] lg:ml-[60px]">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <img src="<%= asset_path("search.png") %>">
      </div>
      <input type="text" id="table-search" class="block p-2 pl-10 text-sm text-gray-900 border-[0] focus:ring-0 rounded-lg md:w-72 h-11 bg-gray-50 dark:placeholder-gray-400 dark:text-white lg:w-full sm:w-[93%] w-[90%]" placeholder="Search or type">
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-sm lg:overflow-x-hidden mt-4 w-[87%] sm:w-[90%] md:w-[95%] lg:w-[95%] mr-auto ml-[30px] h-[50vh]">
    <table class="w-full text-sm text-left text-gray-500 ml-[47px] sm:ml-[63px] lg:ml-0 md:ml-[26px] dark:text-gray-400 overflow-auto table-auto">
      <thead class="text-[#000] bg-[#EDEDED] dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            ID
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Name
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Email
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Password
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Role
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Current Type
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Status
          </th>
          <th scope="col" class="px-6 py-5 font-medium text-[14px] sm:text-[14px] md:text-[16px] lg:text-[18px]">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="overflow-auto">
        <% @users.includes(:profile).each do |user| %>
          <% if user.has_role?(:student) %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181] whitespace-nowrap dark:text-white">
                <%= user.id %>
              </th>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                <%= user.profile&.name %>
              </td>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                <%= user.email %>
              </td>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                ***********
              </td>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                <%= user.has_role?(:admin) ? 'Admin' : 'Student' %>
              </td>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                <%= user.current_type %>
              </td>
              <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
                <%= user.deleted? ? 'Inactive' : 'Active' %>
              </td>
              <td class="px-6 py-4 flex gap-4">
                <button data-modal-target="large-modal-<%= user.id %>" data-modal-toggle="large-modal-<%= user.id %>" class="block w-full md:w-auto   " type="button">
                  <img src="<%= asset_path("pencil.png") %>" alt="...">
                </button>
                <div id="large-modal-<%= user.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
                  <div class="relative w-full lg:max-w-4xl sm:max-w-[32rem] max-h-full max-w-[20rem] ml-[42px] sm:ml-[25px] md:ml-[0px]">
                    <!-- Modal content -->
                    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                      <!-- Modal header -->
                      <div class="flex items-center justify-between p-4 md:p-5 rounded-t dark:border-gray-600">
                        <h3 class="text-[26px] font-semibold text-[#31B978] text-center flex justify-center w-full">
                          Edit Student
                        </h3>
                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="large-modal-<%= user.id %>">
                          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                          </svg>
                          <span class="sr-only">Close modal</span>
                        </button>
                      </div>
                      <!-- Modal body -->
                      <div class="p-7 space-y-6 lg:w-[86%] sm:w-[95%] w-[90%] mr-auto lg:ml-10 ml-5">
                        <%= form_for(user, url: admin_user_path(user), method: :patch) do |f| %>
                          <div class="mb-4 flex flex-col sm:flex-row">
                            <label for="email" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Email<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                            <div class="w-full sm:w-[50%] flex flex-col">
                              <%= f.email_field :email, class: "w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block p-2.5 focus:ring-0 focus:ring-offset-0 focus:border-gray-200" %>
                              <div class="error" id="email-error", style="color: red;"></div>
                            </div>
                          </div>
                          <div class="mb-4 flex flex-col sm:flex-row">
                            <label for="Role" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000]">Role</label>
                            <%= f.select :role, options_for_select(['admin', 'student']), {}, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 outline-none block w-full sm:w-[50%] p-2.5 rounded-[7px]' %>
                          </div>
                          <div class="mb-4 flex flex-col sm:flex-row">
                            <label for="Current Type" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Current Type</label>
                            <%= f.select :current_type, User.current_types.keys.map { |type| [type.humanize, type] }, {}, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:ring-0 focus:ring-offset-0 focus:border-gray-200 w-full sm:w-[50%] block p-2.5 rounded-[7px]" %>
                          </div>
                          <div class="mb-4 flex flex-col sm:flex-row">
                            <label for="password" class="w-full sm:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                            <div class="w-full sm:w-[50%] flex flex-col">
                              <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
                              <div class="error" id="password-error", style="color: red;"></div>
                            </div>
                          </div>
                          <div class="mb-4 flex flex-col sm:flex-row">
                            <label for="Confirm Password" class="block mb-2 text-lg font-medium text-[#000] dark:text-white w-full sm:w-[50%]">Confirmation Password<span class="text-[#C6C6C6] text-[15px] font-medium">(Required)</span></label>
                            <div class="w-full sm:w-[50%] flex flex-col">
                              <%= f.password_field :password_confirmation, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
                              <div class="error" id="password-confirmation-error", style="color: red;"></div>
                            </div>
                          </div>
                          <div class="w-1/2 md:w-1/5 mx-auto mt-4 sm:mt-6">
                            <%= f.submit "Update", class: 'w-full md:ml-[50px] ml-[20px] text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <button data-modal-target="popup-modal-<%= user.id %>" data-modal-toggle="popup-modal-<%= user.id %>" class="block" type="button">
                  <img src="<%= asset_path("delete.png") %>" alt="...", class="del-img">
                </button>
                <div id="popup-modal-<%= user.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg" style="backdrop-filter: contrast(0.5);">
                  <div class="relative w-full max-w-[42rem] max-h-full shadow-md">
                    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                      <h4 class="text-[20px] font-medium pt-6 pl-6 text-[#31B978]">Confirm Deletion</h4>
                      <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal-<%= user.id %>">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                        <span class="sr-only">Close modal</span>
                      </button>
                      <div class="px-6 pb-6 pt-2">
                        <h3 class="mb-5 text-base font-medium text-[#818181] dark:text-gray-400 mt-4 ">Are you sure you want to delete this product?</h3>
                        <%= link_to 'DELETE', admin_user_path(user), data: {turbo_method: :delete}, class: "mr-2 text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-[16px] inline-flex items-center px-9 py-2.5 text-center mr-2" %>
                        <button data-modal-hide="popup-modal" type="button" class="text-white rounded-lg border bg-gradient-to-r from-[#1AB69D] to-[#31B978] text-sm font-medium px-9 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end%>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
