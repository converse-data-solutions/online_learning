<!-- Modal body -->
<div class="p-7 space-y-6 w-[75%] mr-auto ml-auto">
  <%= form_for(course, url: admin_course_path(course), method: :patch) do |f| %>
    <div class="flex mb-3 justify-between flex-col md:flex-row">
      <label for="course-name" class="block mb-2 text-[18px] font-medium text-[#000]">Course</label>
      <div class="flex flex-col">
        <%= f.text_field :course_name, class: "bg-[#F5F5F5] text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full  p-2.5 border-0 rounded mb-4" %>
        <% if course&.errors&.any? %>
          <% if course.errors[:course_name].any? %>
            <div class="text-red-600 text-sm mt-1">
              <%= course.errors.full_messages_for(:course_name).join(', ') %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="mb-4 flex justify-between flex-col md:flex-row">
      <label for="description" class="block mb-2 text-[18px] font-medium text-[#000]">Description<span class="text-[15px] font-medium text-[#C6C6C6]">(optional)</span></label>
      <div class="flex flex-col">
        <%= f.text_area :description, class: 'resize-none bg-[#F5F5F5] border-0 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full  h-[110px] p-2.5 rounded-[7px]' %>
        <% if course&.errors&.any? %>
          <% if course.errors[:description].any? %>
            <div class="text-red-600 text-sm mt-1">
              <%= course.errors.full_messages_for(:description).join(', ') %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="w-1/5 mx-auto mt-7 flex-col md:flex-row">
      <%= f.submit "UPDATE", class: 'w-full ml-[50px] text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
    </div>
  <% end %>
</div>
