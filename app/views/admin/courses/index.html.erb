<div class="flex flex-col">
  <div class="flex w-[95%] mt-10 mx-auto justify-between">
    <div class="text-[#818181] text-[18px]">User Management - Admin</div>
    <div>
      <!-- Modal toggle -->
      <button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="block text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] px-4 py-2 rounded font-bold hover:bg-[#0082CE]" type="button">
        + Add User
      </button>
      <!-- Main modal -->

    </div>
  </div>
  <div class="flex items-center justify-between pt-20 pb-4 w-[95%] mx-auto flex-col md:flex-row">
    <div class="text-[#31B978] text-[18px] font-semibold">User Management Lists</div>
    <label for="table-search " class="sr-only">Search</label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
      </div>
      <input type="text" id="table-search" class="block p-2 pl-10 text-sm text-gray-900 border-[0] rounded-lg w-80 bg-gray-50 dark:placeholder-gray-400 dark:text-white" placeholder="Search for items">
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-sm sm:rounded-sm mt-4 w-[95%] mx-auto">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 overflow-scroll">
      <thead class="text-xs text-[#000] text-[14px] uppercase bg-[#EDEDED] dark:text-gray-400">
        <tr>
          
          <th scope="col" class="px-6 py-5">
            Course Name
          </th>
          <th scope="col" class="px-6 py-5">
            Description
          </th>
          
          <th scope="col" class="px-6 py-5">
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= course.course_name %>
            </th>
            <td class="px-6 py-4">
              <%= course.description %>
            </td>
            <td class="px-6 py-4 flex gap-4">
              <img src="<%= asset_path("pencil.png") %>" alt="...">
              <button data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="block" type="button">
                <img src="<%= asset_path("delete.png") %>" alt="...">
              </button>
              <div id="popup-modal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg">
                <div class="relative w-full max-w-md max-h-full shadow-md">
                  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <h4 class="text-[16px] pt-6 pl-6">Confirm Deletion</h4>
                    <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal">
                      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                      </svg>
                      <span class="sr-only">Close modal</span>
                    </button>
                    <div class="px-6 pb-6 pt-2">
                      <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400 mt-4">Are you sure you want to delete this product?</h3>
                      <button data-modal-hide="popup-modal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                      <%= link_to 'DELETE', admin_course_path(course), data: {turbo_method: :delete}, class: "mr-2 text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2" %>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

