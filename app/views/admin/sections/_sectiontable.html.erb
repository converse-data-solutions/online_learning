<% @sections.each do |section| %>
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <th scope="row" class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181] whitespace-nowrap dark:text-white">
      <%= section.course.course_name %>
    </th>
    <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
      <%= section.title %>
    </td>
    <td class="px-6 py-4 font-medium text-[12px] sm:text-[14px] md:text-[15px] text-[#818181]">
      <%= section.description %>
    </td>
    <td class="px-6 py-4 flex gap-4">
      <button data-modal-target="section-large-modal" data-modal-toggle="section-large-modal" data-turbo-frame="edit-section-popup-frame" data-action="click->modal#toggle" data-url="<%= edit_admin_section_path(section) %>" data-section-id="<%= section.id %>" class="block w-full md:w-auto edit-section-modal" type="button">
        <img src="<%= asset_path("pencil.png") %>" alt="...">
      </button>
      <button data-modal-target="section-popup-modal" data-modal-toggle="section-popup-modal" data-action="click->modal#toggle" data-section-id="<%= section.id %>" class="block send-delete-section" type="button">
        <img src="<%= asset_path("delete.png") %>" alt="...", class="del-img">
      </button>
    </td>
  </tr>
<% end %>
