<tr id="data_append_section" class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 data_append_section_cls">
  <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
    <%= section.title %>
  </td>
  <td class="px-6 py-4 font-medium text-[15px] text-[#818181]">
    <%= section.description %>
  </td>
  <td class="px-6 py-4 flex gap-4">
    <button data-modal-target="large-modal-<%= section.id %>" data-modal-toggle="large-modal-<%= section.id %>" class="block w-full md:w-auto   " type="button"> <img src="<%= asset_path("pencil.png") %>" alt="..."> </button>
    <div id="large-modal-<%= section.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full" style="backdrop-filter: contrast(0.5);">
      <div class="relative w-full max-w-4xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <!-- Modal header -->
          <div class="flex items-center justify-between p-4 md:p-5 rounded-t dark:border-gray-600">
            <h3 class="text-xl font-semibold text-[26px] text-[#31B978] text-center flex justify-center w-full"> EDIT Section </h3>
            <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="large-modal-<%= section.id %>">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="#31B978" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" /> </svg> <span class="sr-only">Close modal</span> </button>
          </div>
          <!-- Modal body -->
          <div class="p-7 space-y-6 w-[75%] mr-auto ml-5">
            <%= form_for([:admin, Course.last, section], url: admin_course_section_path(Course.last, section), method: :patch) do |f| %>
              <div class="flex mb-3 justify-between flex-col md:flex-row">
                <label for="title" class="block mb-2 text-[18px] font-medium text-[#000]">Title</label>
                <%= f.text_field :title, class: "bg-[#F5F5F5] text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-1/2 p-2.5 border-0 rounded mb-4" %>
              </div>
              <div class="mb-4 flex justify-between flex-col md:flex-row">
                <label for="description" class="block mb-2 text-[18px] font-medium text-[#000]">Description<span class="text-[15px] font-medium text-[#C6C6C6]">(optional)</span></label>
                <%= f.text_field :description, class: 'bg-[#F5F5F5] border-0 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full md:w-1/2 h-[110px] p-2.5 rounded-[7px]' %>
              </div>
              <div class="w-1/2 md:w-1/5 mx-auto mt-7">
                <%= f.submit "UPDATE", class: 'w-full md:ml-[50px] ml-[20px] text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <button data-modal-target="popup-modal-<%= section.id %>" data-modal-toggle="popup-modal-<%= section.id %>" class="block" type="button"> <img src="<%= asset_path("delete.png") %>" alt="..." , class="del-img"> </button>
    <div id="popup-modal-<%= section.id %>" tabindex="-1" class="fixed top-0 left-0 right-0 z-[1000] hidden p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full shadow-lg" style="backdrop-filter: contrast(0.5);">
      <div class="relative w-full max-w-[42rem] max-h-full shadow-md">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <h4 class="text-[20px] font-medium pt-6 pl-6 text-[#31B978]">Confirm Deletion</h4>
          <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal-<%= section.id %>">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" /> </svg> <span class="sr-only">Close modal</span> </button>
          <div class="px-6 pb-6 pt-2">
            <h3 class="mb-5 text-[#818181] font-medium text-[16px] mt-4 ">Are you sure you want to delete this product?</h3>
            <%= link_to 'DELETE', admin_course_section_path(course_id: Course.last.id, id: section), data: {turbo_method: :delete}, class: "mr-2 text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] inline-flex items-center px-9 py-2.5 text-center md:mr-2 mr-0" %>
            <button data-modal-hide="popup-modal" type="button" class="text-white rounded-lg border bg-gradient-to-r from-[#1AB69D] to-[#31B978] text-[16px] font-semibold px-9 py-2.5 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">CANCEL</button>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>
