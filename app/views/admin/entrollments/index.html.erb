<h1>Admin: User Entrollments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @entrollments.each do |entrollment| %>
      <tr>
        <td><%= entrollment.user.email %></td>
        <td><%= entrollment.course.course_name %></td>
        <p>Debug: <%= entrollment.inspect %></p>
        <p>Debug: <%= entrollment.status.inspect %></p>
        <td><%= entrollment.status %></td>
        <td>
              <td><%= link_to 'Edit', edit_admin_entrollment_path(entrollment) %></td>
              <td><%= link_to 'DELETE', admin_entrollment_path(entrollment), data: {turbo_method: :delete} %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', root_path %>
