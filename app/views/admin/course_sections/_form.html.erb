<%= form_for course_section || Section.new, url: admin_course_chapters_path(), method: :post, html: { class: "", id: "section-index-form" }, data: { turbo: true } do |f| %>
  <div class="flex flex-col md:flex-row mb-4">
    <label for="Corse Name" class="w-full md:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Course Name</label>
    <div class=" flex flex-col mb-4">
      <%= collection_select(:section, :course_id, Course.all, :id, :course_name, { prompt: "Select Course", selected: '' }, { class: "bg-[#FFFFFF] foucus:ring-0 text-[#818181] text-[16px] font-medium rounded-lg outline-none block w-full p-2.5 rounded-[7px] bg-[#fff] text-[#818181] filter-handle new-custom-select new-custom-select-border sources" })  %>
      <div class="text-red-600 text-sm mt-1" id="course-error"></div>
    </div>
  </div>
  <div class="flex flex-col md:flex-row">
    <label for="title" class="w-full md:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Title</label>
    <div class=" flex flex-col mb-4">
      <%= f.text_field :title, class: "bg-[#FFFFFF] border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
      <div class="text-red-600 text-sm mt-1" id="title-error"></div>
      <% if course_section&.errors&.any? %>
        <% if course_section.errors[:title].any? %>
          <div class="text-red-600 text-sm mt-1">
            <%= course_section.errors.full_messages_for(:title).join(', ') %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col md:flex-row">
    <label for="description" class="w-full md:w-[50%] block mb-2 text-lg font-medium text-[#000] dark:text-white">Description<span class="text-[15px] text-[#C6C6C6] font-medium">(optional)</span></label>
    <%= f.text_area :description, class: 'resize-none border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-0 focus:ring-offset-0 focus:border-gray-200  block w-[292px] h-[110px] p-2.5 rounded-[7px]' %>
  </div>
  <%= hidden_field_tag :page, params[:page]%>
  <%= hidden_field_tag :per_page, params[:per_page]%>
  <%= hidden_field_tag :search, params[:search]%>
  <div class="md:w-1/5 w-1/2 mx-auto mt-11">
    <%= f.submit "Create", class: 'w-full text-white bg-gradient-to-r from-[#1AB69D] to-[#31B978] font-semibold rounded-lg text-[16px] px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
  </div>
<% end %>
