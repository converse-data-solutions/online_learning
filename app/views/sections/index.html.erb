<h1>Sections</h1>
<table >
  <thead>
    <th>Section Name</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.description %>
          <td><%= link_to 'Show', course_section_path(@courses, section)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <%= link_to "Courses", courses_path %>
  <div class="container d-flex justify-content-between align-items-center">
    <h1>Sections</h1>
    <div>
      <%= link_to "Back to Courses", courses_path, class: "btn btn-primary" %>
    </div>
  </div>
  <% @sections.each_slice(4) do |sections| %>
    <div class="row">
      <% sections.each do |section| %>
        <div class="col-sm-3">
          <div class="card" style="width: 18rem;">
            <img src="<%= asset_path("nature.jpeg") %>" class="card-img-top" alt="..." style="height: 286px;">
            <div class="card-body">
              <h5 class="card-title"><%= section.title %></h5>
              <p class="card-text"><%= section.description %></p>
              <%= link_to 'Show', course_section_path(@courses, section), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
